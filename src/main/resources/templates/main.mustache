</div>


<div class="massages">
    <div class="text">
        {{#messages}}
            <b>{{id}}</b><br>
            <span>{{text}}</span><br>
            <i>{{tag}} </i><br>
            <strong>{{aurhorName}}</strong><br>
        {{/messages}}<br>
        <a href="/settings">Настройки</a><br>
        <a href="/createTopic">Создание новой части форума</a><br>
        <a href="/createEvent">Создать ивент</a><br>
    </div>
</div>

